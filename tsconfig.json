{
  "compilerOptions": {
    "outDir": "./dist/types/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "lib": ["es2015"]
  },
  "include": ["src/**/*"],
  "exclude": ["playground/**/*"]
}
